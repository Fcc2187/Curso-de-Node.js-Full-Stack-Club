<html lang="en">
<%- include('partials/head') %>
<body>
    <div class ="container">
        <h1>Nossos Usuários</h1>
        <div class="content">
            <% if (users.length > 0) { %>
                <% users.forEach(user => { %>
                    <div class="user-item">
                        <h3 class="user-name">
                            <%= user.firstName %> <%= user.lastName %>
                        </h3>
                        <p class="user-email"><%= user.email %></p>
                        
                        </div>
                <% }); %>
                <% } else { %>
                <p>Nenhum usuário encontrado.</p>
            <% } %>
        </div>
    </div>
</body>
</html>